
<%- include('header') -%>

  <div class="box" id="heading">

    <h1> <%= typeOfDay %> </h1>

  </div>

  <div class="box">

    <% for (var i=0; i<newListItem.length;i++){ %>

    <div class="item">
      <input type="checkbox">
      <p> <%= newListItem[i] %> </p>
    </div>

    <% } %>

    <form class="item" action="/" method="post">

      <input type="text" name="newValue" placeholder="New Item">

      <button type="submit">+</button>

    </form>

  </div>

  <%- include('footer') -%>
